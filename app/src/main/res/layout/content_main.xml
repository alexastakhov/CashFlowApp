<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lunokhod.java.android.cashflowapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:weightSum="1"
    style="?android:buttonBarStyle" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center_vertical"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_label_text"
                android:id="@+id/textView4"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/main_activity_horizontal_margin"
                android:textSize="@dimen/main_label_text_size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/amountEditText"
                android:editable="false"
                android:enabled="true"
                android:numeric="signed|decimal"
                android:singleLine="true"
                android:textSize="@dimen/amount_edit_text_size"
                android:textColor="@color/amountTextColor"
                android:gravity="center"
                android:textCursorDrawable="@drawable/amount_edit_cursor"
                android:layout_marginTop="@dimen/amount_edit_vertical_margin"
                android:maxLength="12"
                android:paddingBottom="4sp"
                android:paddingTop="2sp"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:layout_marginLeft="@dimen/main_activity_horizontal_margin"
                android:layout_marginRight="@dimen/main_activity_horizontal_margin"
                android:layout_marginBottom="@dimen/amount_edit_vertical_margin" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_label_text"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/main_activity_horizontal_margin"
                android:textSize="@dimen/main_label_text_size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginRight="@dimen/main_activity_horizontal_margin"
            android:layout_marginLeft="@dimen/main_activity_horizontal_margin"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/dateEditText"
                android:focusable="false"
                android:editable="false"
                android:longClickable="false"
                android:cursorVisible="false"
                android:background="@drawable/apptheme_edit_text_holo_light"
                android:layout_weight="2"
                android:paddingLeft="12sp"
                android:paddingRight="12sp"
                android:gravity="center"
                android:textSize="@dimen/main_edit_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dateImageButton"
                android:layout_weight="11"
                android:src="@mipmap/ic_date_range_black_24dp"
                android:padding="5sp" />
        </LinearLayout>

    </LinearLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categorySpinner"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dialog"
        android:background="@drawable/cat_spinner_style"
        android:layout_marginTop="@dimen/main_activity_vertical_margin"
        android:paddingTop="@dimen/spinner_vertical_padding"
        android:paddingBottom="@dimen/spinner_vertical_padding"
        android:paddingLeft="@dimen/spinner_horizontal_padding"
        android:paddingRight="@dimen/spinner_horizontal_padding"
        android:layout_marginRight="@dimen/main_activity_horizontal_margin"
        android:layout_marginLeft="@dimen/main_activity_horizontal_margin" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentEditText"
        android:layout_marginTop="@dimen/main_activity_vertical_margin"
        android:editable="true"
        android:lines="3"
        android:layout_weight="0.09"
        android:background="@drawable/descr_text_style"
        android:gravity="top|left"
        android:maxLines="3"
        android:maxLength="96"
        android:hint="@string/comment_textview_hint"
        android:textSize="@dimen/main_edit_text_size"
        android:padding="@dimen/main_comment_text_padding"
        android:textColorHint="@color/labelHintPrimaryColor"
        android:textColor="@color/editTextPrimaryColor"
        android:inputType="textCapSentences|textMultiLine"
        android:layout_marginLeft="@dimen/main_activity_horizontal_margin"
        android:layout_marginRight="@dimen/main_activity_horizontal_margin" />

    <Button
        style="?android:buttonBarButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:text="@string/add_record_button_text"
        android:id="@+id/addRecButton"
        android:textSize="16sp"
        android:background="@drawable/addrec_btn_style"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/main_activity_vertical_margin" />

</LinearLayout>

